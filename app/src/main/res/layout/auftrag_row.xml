<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignRight="@+id/AuftragRow_status_textView"
        android:id="@+id/namefield"
        android:orientation="vertical">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/beschreibung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_dark_material_dark"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:text="BESCHREIBUNG"
            android:maxLines="3"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/AuftragRow_nachname_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_material_dark"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:text="NACHNAME"
                android:paddingRight="10dp"
                android:gravity="center_vertical" />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/AuftragRow_vorname_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_material_dark"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:text="NACHNAME"
                android:gravity="center_vertical"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:id="@+id/AuftragRow_status_textView"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColor="@color/primary_dark_material_dark"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:text="Status"
        android:layout_alignBottom="@+id/namefield"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
